<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" Click="Opener"/>
                    <MenuItem Header="_About" Click="Abouter"/>
                    <MenuItem Header="_Exit" Click="Exiter"/>
                </MenuItem>
            </Menu>
          
            <TreeView Margin="2,2,0,13" Name="TreeView1" HorizontalAlignment="Left"  
VerticalAlignment="Top" Width="390" Height="300"/>

            <ScrollViewer Margin="0,0,0,0" Width="390" HorizontalAlignment="Right">
                <TextBlock Margin="0,0,0,0" TextWrapping="Wrap" Name="TextBox1"
                       Text="NIC" HorizontalAlignment="Right" Width="370"/>
            </ScrollViewer>
            
        </DockPanel>
        <StatusBar VerticalAlignment="Bottom" Height="20">
            <TextBlock Name="rahsText"  TextWrapping="Wrap" Text=""/>
        </StatusBar>
    </Grid>
</Window>
